<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tradiuus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_color_700"
        android:padding="@dimen/dp_five">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/top_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_five"
            android:src="@drawable/top_logo" />

        <ImageView
            android:id="@+id/cross_button"
            android:layout_width="@dimen/dp_thirty"
            android:layout_height="@dimen/dp_thirty"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/cross_cion" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp_five">

                <!-- Section 1 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/technician_img"
                        android:layout_width="@dimen/dp_sixty"
                        android:layout_height="@dimen/dp_sixty"
                        android:src="@drawable/technician_avt" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/title_rgt"
                        android:layout_toRightOf="@+id/technician_img"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_five">

                        <com.tradiuus.widgets.CustomTextView
                            android:id="@+id/contractor_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Switch is Damaged"
                            android:textColor="?colorPrimaryDark"
                            android:textSize="@dimen/sp_smallxx"
                            tradiuus:customFont="@string/cond_bold" />


                        <LinearLayout
                            android:id="@+id/rattings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_five"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/dp_ten"
                                android:layout_height="@dimen/dp_ten"
                                android:src="@drawable/ratingstaryellow_2" />

                            <ImageView
                                android:layout_width="@dimen/dp_ten"
                                android:layout_height="@dimen/dp_ten"
                                android:src="@drawable/ratingstaryellow_2" />

                            <ImageView
                                android:layout_width="@dimen/dp_ten"
                                android:layout_height="@dimen/dp_ten"
                                android:layout_marginLeft="@dimen/dp_two"
                                android:src="@drawable/ratingstaryellow_2" />

                            <ImageView
                                android:layout_width="@dimen/dp_ten"
                                android:layout_height="@dimen/dp_ten"
                                android:layout_marginLeft="@dimen/dp_two"
                                android:src="@drawable/ratingstaryellow_2" />

                            <ImageView
                                android:layout_width="@dimen/dp_ten"
                                android:layout_height="@dimen/dp_ten"
                                android:layout_marginLeft="@dimen/dp_two"
                                android:src="@drawable/ratingstaryellow_2" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_fifteen"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.33"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.tradiuus.widgets.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="GEO JOBS"
                                    android:textColor="@color/md_cyan_600"
                                    android:textSize="@dimen/sp_smallx"
                                    tradiuus:customFont="@string/cond" />

                                <com.tradiuus.widgets.CustomTextView
                                    android:id="@+id/technician_job"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_two"
                                    android:text="4"
                                    android:textColor="?colorPrimaryDark"
                                    android:textSize="@dimen/sp_smallx"
                                    tradiuus:customFont="@string/cond_bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.33"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.tradiuus.widgets.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RESPONSE TIME"
                                    android:textColor="@color/md_cyan_600"
                                    android:textSize="@dimen/sp_smallx"
                                    tradiuus:customFont="@string/cond" />

                                <com.tradiuus.widgets.CustomTextView
                                    android:id="@+id/technician_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_two"
                                    android:text="15 min"
                                    android:textColor="?colorPrimaryDark"
                                    android:textSize="@dimen/sp_smallx"
                                    tradiuus:customFont="@string/cond_bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.33"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.tradiuus.widgets.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="APPROX COST"
                                    android:textColor="@color/md_cyan_600"
                                    android:textSize="@dimen/sp_smallx"
                                    tradiuus:customFont="@string/cond" />

                                <com.tradiuus.widgets.CustomTextView
                                    android:id="@+id/technician_cost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_two"
                                    android:text="NO AVAILABLE"
                                    android:textColor="@color/md_red_500"
                                    android:textSize="@dimen/sp_smallx"
                                    tradiuus:customFont="@string/cond_bold" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>

                <!-- Section 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingBottom="@dimen/dp_five">

                    <ImageView
                        android:layout_width="@dimen/dp_twenttfive"
                        android:layout_height="@dimen/dp_twenttfive"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cust_insurance" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_five"
                        android:gravity="left"
                        android:text="Have General Insurance:"
                        android:textColor="?colorPrimaryDark"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_insurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_two"
                        android:gravity="left"
                        android:text="Yes"
                        android:textColor="@color/md_cyan_600"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingBottom="@dimen/dp_five">

                    <ImageView
                        android:layout_width="@dimen/dp_twenttfive"
                        android:layout_height="@dimen/dp_twenttfive"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cust_license" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_five"
                        android:gravity="left"
                        android:text="Have License:"
                        android:textColor="?colorPrimaryDark"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_two"
                        android:gravity="left"
                        android:text="Yes"
                        android:textColor="@color/md_cyan_600"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingBottom="@dimen/dp_five">

                    <ImageView
                        android:layout_width="@dimen/dp_twenttfive"
                        android:layout_height="@dimen/dp_twenttfive"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cust_wc" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_five"
                        android:gravity="left"
                        android:text="Workers Comp Ins:"
                        android:textColor="?colorPrimaryDark"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_workers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_two"
                        android:gravity="left"
                        android:text="Yes"
                        android:textColor="@color/md_cyan_600"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingBottom="@dimen/dp_five">

                    <ImageView
                        android:layout_width="@dimen/dp_twenttfive"
                        android:layout_height="@dimen/dp_twenttfive"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cust_trucksavailable" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_five"
                        android:gravity="left"
                        android:text="Trucks Available for TRADIUUS:"
                        android:textColor="?colorPrimaryDark"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_trucks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_two"
                        android:gravity="left"
                        android:text="1"
                        android:textColor="@color/md_cyan_600"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingBottom="@dimen/dp_five">

                    <ImageView
                        android:layout_width="@dimen/dp_twenttfive"
                        android:layout_height="@dimen/dp_twenttfive"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cust_url" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_five"
                        android:gravity="left"
                        android:text="Website URL:"
                        android:textColor="?colorPrimaryDark"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_two"
                        android:gravity="left"
                        android:text="tradiuus.com"
                        android:textColor="@color/md_cyan_600"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingBottom="@dimen/dp_five">

                    <ImageView
                        android:layout_width="@dimen/dp_twenttfive"
                        android:layout_height="@dimen/dp_twenttfive"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cust_availabletime" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_five"
                        android:gravity="left"
                        android:text="Available Time:"
                        android:textColor="?colorPrimaryDark"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_two"
                        android:gravity="left"
                        android:text="6.00 am - 6.00 pm"
                        android:textColor="@color/md_cyan_600"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingBottom="@dimen/dp_five">

                    <ImageView
                        android:layout_width="@dimen/dp_twenttfive"
                        android:layout_height="@dimen/dp_twenttfive"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cust_location" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_five"
                        android:gravity="left"
                        android:text="Area Covered ZIP CODES:"
                        android:textColor="?colorPrimaryDark"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_zip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_two"
                        android:gravity="left"
                        android:text="70008"
                        android:textColor="@color/md_cyan_600"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingBottom="@dimen/dp_five">

                    <ImageView
                        android:layout_width="@dimen/dp_twenttfive"
                        android:layout_height="@dimen/dp_twenttfive"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cust_techavailable" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_five"
                        android:gravity="left"
                        android:text="Technicians Available:"
                        android:textColor="?colorPrimaryDark"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_availability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_two"
                        android:gravity="left"
                        android:text="1"
                        android:textColor="@color/md_cyan_600"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_five"
                    android:paddingBottom="@dimen/dp_five">

                    <ImageView
                        android:layout_width="@dimen/dp_twenttfive"
                        android:layout_height="@dimen/dp_twenttfive"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/cust_background" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_five"
                        android:gravity="left"
                        android:text="Background Check:"
                        android:textColor="?colorPrimaryDark"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_bcg_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_two"
                        android:gravity="left"
                        android:text="No"
                        android:textColor="@color/md_cyan_600"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond_bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_500" />
                <!-- 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_white_1000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/emergency_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="#F86A54"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/emergency_btn_icon"
                            android:layout_width="@dimen/dp_twenttfive"
                            android:layout_height="@dimen/dp_twenttfive"
                            android:src="@drawable/emergencyheader" />

                        <com.tradiuus.widgets.CustomTextView
                            android:id="@+id/emergency_btn_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/dp_ten"
                            android:text="Emergency Services"
                            android:textColor="@color/md_white_1000"
                            android:textSize="@dimen/sp_smallx"
                            tradiuus:customFont="@string/cond_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/estimate_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="#38C7B5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/estimate_btn_icon"
                            android:layout_width="@dimen/dp_twenttfive"
                            android:layout_height="@dimen/dp_twenttfive"
                            android:src="@drawable/estimateheader_2" />

                        <com.tradiuus.widgets.CustomTextView
                            android:id="@+id/estimate_btn_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/dp_ten"
                            android:text="Estimate Services"
                            android:textColor="@color/md_white_1000"
                            android:textSize="@dimen/sp_smallx"
                            tradiuus:customFont="@string/cond_bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_five">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_twenttfive"
                            android:layout_height="@dimen/dp_twenttfive"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ratingactive" />

                        <com.tradiuus.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_five"
                            android:gravity="left"
                            android:text="Ratting:"
                            android:textColor="?colorPrimaryDark"
                            android:textSize="@dimen/sp_medium"
                            tradiuus:customFont="@string/cond_bold" />

                        <ImageView
                            android:layout_width="@dimen/dp_ten"
                            android:layout_height="@dimen/dp_ten"
                            android:src="@drawable/ratingstaryellow_2" />

                        <com.tradiuus.widgets.CustomTextView
                            android:id="@+id/contractor_ratting_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_two"
                            android:gravity="left"
                            android:text="5"
                            android:textColor="@color/md_cyan_600"
                            android:textSize="@dimen/sp_medium"
                            tradiuus:customFont="@string/cond_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_twenttfive"
                            android:layout_height="@dimen/dp_twenttfive"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/cust_reviews" />

                        <com.tradiuus.widgets.CustomTextView
                            android:id="@+id/tech_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_five"
                            android:gravity="left"
                            android:text="Review"
