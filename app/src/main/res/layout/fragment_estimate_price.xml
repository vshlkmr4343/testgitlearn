<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tradiuus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_view">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.tradiuus.widgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_ten"
                    android:drawableLeft="@drawable/signup_icon"
                    android:drawablePadding="@dimen/dp_five"
                    android:gravity="left|center"
                    android:padding="@dimen/dp_five"
                    android:text="Please Enter Estimate Price Range and Job Complete Time"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_mediumxx"
                    tradiuus:customFont="@string/cond" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_forty"
                    android:paddingRight="@dimen/dp_forty">

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/text_img1_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="left"
                        android:padding="@dimen/dp_five"
                        android:text="Estimate Price Range"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_mediumxx"
                        tradiuus:customFont="@string/cond" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_eight"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_five">

                        <com.tradiuus.widgets.CustomTextView
                            android:layout_width="@dimen/dp_thirtyfive"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:padding="@dimen/dp_five"
                            android:text="$"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_mediumxx"
                            tradiuus:customFont="@string/cond" />

                        <com.tradiuus.widgets.CustomEditText
                            android:id="@+id/estimate_price_max"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_field"
                            android:gravity="left"
                            android:hint="Minimum Price"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dp_five"
                            android:paddingTop="@dimen/dp_ten"
                            android:paddingRight="@dimen/dp_five"
                            android:paddingBottom="@dimen/dp_ten"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_mediumxx"
                            tradiuus:customFont="@string/cond_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_eight"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_five">

                        <com.tradiuus.widgets.CustomTextView
                            android:layout_width="@dimen/dp_thirtyfive"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:padding="@dimen/dp_five"
                            android:text="$"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_mediumxx"
                            tradiuus:customFont="@string/cond" />

                        <com.tradiuus.widgets.CustomEditText
                            android:id="@+id/estimate_price_min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_field"
                            android:gravity="left"
                            android:hint="Maximum Price"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dp_five"
                            android:paddingTop="@dimen/dp_ten"
                            android:paddingRight="@dimen/dp_five"
                            android:paddingBottom="@dimen/dp_ten"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_mediumxx"
                            tradiuus:customFont="@string/cond_light" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_forty"
                    android:paddingRight="@dimen/dp_forty">

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="left"
                        android:padding="@dimen/dp_five"
                        android:text="Estimate Job Completion Time"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_mediumxx"
                        tradiuus:customFont="@string/cond" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_eight"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_five">

                        <com.tradiuus.widgets.CustomTextView
                            android:layout_width="@dimen/dp_thirtyfive"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:padding="@dimen/dp_five"
                            android:text="Hr"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_mediumxx"
                            tradiuus:customFont="@string/cond" />

                        <com.tradiuus.widgets.CustomEditText
                            android:id="@+id/estimate_job_time_max"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_field"
                            android:gravity="left"
                            android:hint="Hours"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dp_five"
                            android:paddingTop="@dimen/dp_ten"
                            android:paddingRight="@dimen/dp_five"
                            android:paddingBottom="@dimen/dp_ten"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_mediumxx"
                            tradiuus:customFont="@string/cond_light" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_eight"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_five">

                        <com.tradiuus.widgets.CustomTextView
                            android:layout_width="@dimen/dp_thirtyfive"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:padding="@dimen/dp_five"
                            android:text="Min"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_mediumxx"
                            tradiuus:customFont="@string/cond" />

                        <com.tradiuus.widgets.CustomEditText
                            android:id="@+id/estimate_job_time_min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/text_field"
                            android:gravity="left"
                            android:hint="Minute"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dp_five"
                            android:paddingTop="@dimen/dp_ten"
                            android:paddingRight="@dimen/dp_five"
                            android:paddingBottom="@dimen/dp_ten"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_mediumxx"
                            tradiuus:customFont="@string/cond_light" />

                    </LinearLayout>
                </LinearLayout>

                <com.tradiuus.widgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="@dimen/dp_fifteen"
                    android:paddingRight="@dimen/dp_fifteen"
                    android:text="Note: Estimate price range and job completion time are applicable for all Emergency and Estimate jobs served by your Company"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_medium"
                    tradiuus:customFont="@string/cond" />

                <com.tradiuus.widgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/signup_icon"
                    android:drawablePadding="@dimen/dp_five"
                    android:gravity="left|center"
                    android:padding="@dimen/dp_five"
                    android:text="CERTIFICATION AND OATH"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_mediumxx"
                    tradiuus:customFont="@string/cond" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_eight">

                    <ImageView
                        android:id="@+id/fragment_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/checkbox_trade" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingLeft="@dimen/dp_five"
                        android:text="All the information submited is true to my knowledge and I agree to the TERMS OF USE"
                        android:textColor="@color/app_main_color_700"
                        android:textSize="@dimen/sp_medium"
                        tradiuus:customFont="@string/cond" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.tradiuus.widgets.CustomTextView
            android:id="@+id/frag_estimate_btn_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_forty"
            android:layout_margin="@dimen/dp_eight"
            android:layout_marginTop="@dimen/dp_five"
            android:layout_weight="0.5"
            android:background="@drawable/blank_back_btn"
            android:gravity="center"
            android:text="BACK"
            android:textColor="@color/app_main_color_700"
            android:textSize="@dimen/sp_mediumxx"
            tradiuus:customFont="@string/cond_light" />

        <com.tradiuus.widgets.CustomTextView
            android:id="@+id/frag_estimate_btn_proceed"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_forty"
            android:layout_margin="@dimen/dp_eight"
            android:layout_marginTop="@dimen/dp_five"
            android:layout_weight="0.5"
            android:background="@drawable/blank_next_btn"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/sp_mediumxx"
            tradiuus:customFont="@string/cond_light" />

    </LinearLayout>
</RelativeLayout>


