<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tradiuus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_two">

    <ImageView
        android:id="@+id/trade_icon"
        android:layout_width="@dimen/dp_sixty"
        android:layout_height="@dimen/dp_sixty"
        android:scaleType="centerInside"
        android:src="@color/md_white_1000" />

    <com.tradiuus.widgets.CustomTextView
        android:id="@+id/trade_row_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="@dimen/dp_five"
        android:text=""
        android:textColor="?colorPrimaryDark"
        android:textSize="@dimen/sp_mediumx"
        tradiuus:customFont="@string/cond_bold" />

</LinearLayout>