<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tradiuus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_color_700"
    android:onClick="@null"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_five"
            android:layout_marginRight="@dimen/dp_five"
            android:layout_marginBottom="@dimen/dp_five"
            android:src="@drawable/top_icon"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_five"
            android:src="@drawable/top_logo" />

        <ImageView
            android:id="@+id/action_cross"
            android:layout_width="@dimen/dp_thirty"
            android:layout_height="@dimen/dp_thirty"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_ten"
            android:src="@drawable/cross_cion"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0072A8"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_twenttfive"
            android:layout_height="@dimen/dp_twenttfive"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_error_black_48" />

        <com.tradiuus.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_ten"
            android:text="Important"
            android:textColor="#25B7D3"
            android:textSize="@dimen/sp_mediumxx"
            tradiuus:customFont="@string/cond" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.tradiuus.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:padding="@dimen/dp_ten"
            android:text="Please note you are logged in as a contractor which is your administration account. You can manage your firm here, and add other technicians etc. If you are looking for work, then you will have to log out of this contractor account and log into your technician account."
            android:textColor="?colorPrimaryDark"
            android:textSize="@dimen/sp_mediumx"
            tradiuus:customFont="@string/cond" />

        <com.tradiuus.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_ten"
            android:gravity="top|left"
            android:padding="@dimen/dp_ten"
            android:text="@string/note_lout_contractor"
            android:textColor="?colorPrimaryDark"
            android:textSize="@dimen/sp_mediumx"
            tradiuus:customFont="@string/cond" />

        <com.tradiuus.widgets.CustomTextView
            android:id="@+id/dashboard_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_twenty"
            android:background="@drawable/blank_next_btn"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_ten"
            android:paddingTop="@dimen/dp_five"
            android:paddingRight="@dimen/dp_ten"
            android:paddingBottom="@dimen/dp_five"
            android:text="CONTINUE TO DASHBOARD"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/sp_mediumx"
            tradiuus:customFont="@string/cond_light" />

        <com.tradiuus.widgets.CustomTextView
            android:id="@+id/logout_tab"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_forty"
            android:layout_marginTop="@dimen/dp_five"
            android:gravity="center"
            android:padding="@dimen/dp_five"
            android:text="Logout"
            android:textColor="@color/md_red_300"
            android:textSize="@dimen/sp_mediumx"
            tradiuus:customFont="@string/cond_bold" />

    </LinearLayout>
</LinearLayout>