<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tradiuus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboardbg_tech"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/include_top_header_contractor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dp_two"
                android:layout_weight="0.4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_five"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/contractor_dsb_work_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:checked="true"
                        android:theme="@style/BrandedSwitch.control" />

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Available for Work"
                        android:textColor="@color/md_white_1000"
                        android:textSize="@dimen/sp_mediumxx"
                        tradiuus:customFont="@string/cond" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_profile_pic"
                    android:layout_width="@dimen/dp_sixty"
                    android:layout_height="@dimen/dp_sixty"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_twelve"
                    android:scaleType="centerCrop"
                    android:src="@drawable/technician_avt" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/md_black_1000"
                    android:orientation="vertical">

                    <com.tradiuus.widgets.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/contractor_dsb_username"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_two"
                        android:gravity="center"
                        android:text="WELCOME"
                        android:textColor="@color/md_yellow_700"
                        android:textSize="35sp"
                        tradiuus:customFont="@string/cond" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_dsb_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_five"
                        android:gravity="center"
                        android:text="Contractor Name"
                        android:textColor="@color/md_white_1000"
                        android:textSize="@dimen/sp_large"
                        tradiuus:customFont="@string/cond" />

                    <com.tradiuus.widgets.CustomTextView
                        android:id="@+id/contractor_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_two"
                        android:layout_marginBottom="@dimen/dp_five"
                        android:gravity="center"
                        android:text="Company Name"
                        android:textColor="@color/md_light_blue_700"
                        android:textSize="@dimen/sp_mediumxx"
                        tradiuus:customFont="@string/cond" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <ImageView
                                    android:id="@+id/contractor_dash_btn_emergency"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_five"
                                    android:layout_weight="0.3"
                                    android:padding="@dimen/dp_two"
                                    android:src="@drawable/emergency_icon" />

                                <ImageView
                                    android:id="@+id/contractor_dash_btn_estimate"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_five"
                                    android:layout_weight="0.3"
                                    android:padding="@dimen/dp_two"
                                    android:src="@drawable/estimate_icon" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <ImageView
                                    android:id="@+id/contractor_dash_btn_luxury"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_five"
                                    android:layout_weight="0.3"
                                    android:padding="@dimen/dp_two"
                                    android:src="@drawable/luxury_icon" />

                                <ImageView
                                    android:id="@+id/contractor_dash_btn_settings"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/dp_five"
                                    android:layout_weight="0.3"
                                    android:padding="@dimen/dp_two"
                                    android:src="@drawable/settings_icon" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>